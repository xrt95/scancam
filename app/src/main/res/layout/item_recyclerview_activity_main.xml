<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:selfDef="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootview_item_recyclerview_activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/recyclerview_item_toucheffect_activity_main">

    <com.xrt.widget.RoundCornerImageView
        android:id="@+id/imageview_item_recyclerview_activity_main"
        android:layout_width="@dimen/itemview_width_recyclerview_activity_main"
        android:layout_height="@dimen/itemview_height_recyclerview_activity_main"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        selfDef:radius="3dp"/>

    <TextView
        android:id="@+id/textview_title_item_recyclerview_activity_main"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="left|center_vertical"
        android:textSize="17sp"
        android:textColor="@color/tranparentDarkBB"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintLeft_toRightOf="@id/imageview_item_recyclerview_activity_main"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"/>

    <TextView
        android:id="@+id/textview_time_item_recyclerview_activity_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="left|center_vertical"
        android:textSize="12sp"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintLeft_toRightOf="@id/imageview_item_recyclerview_activity_main"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_title_item_recyclerview_activity_main"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="35dp"/>

    <TextView
        android:id="@+id/button_item_check_activity_main"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_item_check_activity_main_unpress_bg"/>




</androidx.constraintlayout.widget.ConstraintLayout>
