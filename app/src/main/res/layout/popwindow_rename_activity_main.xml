<?xml version="1.0" encoding="utf-8"?>



    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popwindow_rename_activity_main_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重命名"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline_rename_popwindow_activity_main"
            app:layout_constraintHorizontal_bias="0.2"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edittext_rename_popwindow_activity_main"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:lines="1"
            android:inputType="text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/button_clear_rename_popwindow_activity_main"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/clear_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edittext_rename_popwindow_activity_main"
            android:layout_marginTop="15dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_rename_popwindow_activity_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/confirm_button_rename_popwindow_activity_main"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="确定"
            android:gravity="center"
            app:layout_constraintRight_toLeftOf="@id/guideline_rename_popwindow_activity_main"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/cancel_button_rename_popwindow_activity_main"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="取消"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/guideline_rename_popwindow_activity_main"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            android:layout_marginBottom="20dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

