<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootview_popwindow_singleitem_menu_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_padding_popwindow_singleitem_menu_activity_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintVertical_bias="0"
        android:background="@color/tranparentDark"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootview_singleitem_menu_activity_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tranGrey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_padding_popwindow_singleitem_menu_activity_main">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootview1_popwindow_singleitem_menu_activity_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHeight_percent="0.45"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rootview_head_of_rootview1_popwindow_singleitem_menu_activity_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintVertical_bias="0.05">

                <TextView
                    android:id="@+id/textview_title_popupwindow_singleitem_menu_activity_main"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:autoSizeTextType="uniform"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/tranparentDarkBB"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintVertical_bias="0"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/textview_size_popupwindow_singleitem_menu_activity_main"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:text="大小:"
                    android:textColor="@color/tranparentDark"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview_title_popupwindow_singleitem_menu_activity_main"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.4"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_head_rootview_popupwindow_singleitem_menu_activity_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="120dp"/>

                <TextView
                    android:id="@+id/textview_type_popupwindow_singleitem_menu_activity_main"
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:text="类型: PDF"
                    android:textColor="@color/tranparentDark"
                    app:layout_constraintLeft_toRightOf="@id/textview_size_popupwindow_singleitem_menu_activity_main"
                    app:layout_constraintTop_toBottomOf="@id/textview_title_popupwindow_singleitem_menu_activity_main"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textview_fenxiang"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:text="分享："
                android:gravity="left|center_vertical"
                android:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@id/rootview_head_of_rootview1_popwindow_singleitem_menu_activity_main"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintVertical_bias="0"/>

            <com.xrt.widget.HorizonImageTextButtonGroup
                android:id="@+id/buttongroup_popupwindow_singleitem_menu_activit_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/textview_fenxiang"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintHorizontal_bias="0.2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootview2_popwindow_singleitem_menu_activity_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHeight_percent="0.53"
            android:background="@color/white">

            <com.xrt.widget.VerticalImageTextButtonGroup
                android:id="@+id/buttongroup_submenu_popwindow_singleitem_menu_activity_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.9"
                app:layout_constraintVertical_bias="0.4"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>