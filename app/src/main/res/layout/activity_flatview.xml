<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootview_activity_flatview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/movebar_activity_flatview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <Button
            android:id="@+id/button_quit_movebar_activity_flatview"
            android:layout_width="@dimen/button_quit_movebar_activity_flatview_width"
            android:layout_height="@dimen/button_quit_movebar_activity_flatview_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/close_button"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textview_movebar_activity_flatview"
            android:layout_width="0dp"
            android:layout_height="@dimen/textview_movebar_activity_flatview_height"
            android:text="长按拖动调整顺序"
            android:textColor="@color/black"
            android:gravity="center"
            app:autoSizeTextType="uniform"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.48"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/selectbar_activity_flatview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <Button
            android:id="@+id/button_quit_selectbar_activity_flatview"
            android:layout_width="@dimen/button_quit_selectbar_activity_flatview_width"
            android:layout_height="@dimen/button_quit_selectbar_activity_flatview_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/close_button"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textview_selectbar_activity_flatview"
            android:layout_width="@dimen/textview_selectbar_activity_flatview_width"
            android:layout_height="@dimen/textview_selectbar_activity_flatview_height"
            android:text="已选择 项"
            android:textColor="@color/black"
            android:gravity="left|center_vertical"
            app:autoSizeTextType="uniform"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.48"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/button_selectall_selectbar_activity_flatview"
            android:layout_width="@dimen/button_selectall_activity_flatview_width"
            android:layout_height="@dimen/button_selectall_activity_flatview_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="25dp"
            android:background="@drawable/selectall_button_bg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_activity_flatview"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_activity_flatview_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <Button
            android:id="@+id/button_back_activity_flatview"
            android:layout_width="@dimen/button_back_toolbar_activity_flatview_width"
            android:layout_height="@dimen/button_back_toolbar_activity_flatview_height"
            android:background="@drawable/back_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/title_toolbar_activity_flatview"
            android:layout_width="0dp"
            android:layout_height="@dimen/title_toolbar_activity_flatview_height"
            android:lines="1"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="left|center_vertical"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/button_back_activity_flatview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/button_share_whole_pdf_activity_flatview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button_menu_toolbar_activity_flatview"
            android:layout_marginRight="10dp"
            android:background="@drawable/share_button"/>
        
        <Button
            android:id="@+id/button_menu_toolbar_activity_flatview"
            android:layout_width="@dimen/button_menu_toolbar_activity_flatview_width"
            android:layout_height="@dimen/button_menu_toolbar_activity_flatview_height"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/menu_button"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView_activity_flatview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_activity_flatview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.95"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footbar_activity_flatview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">

        <com.xrt.widget.HorizonImageTextButtonGroup
            android:id="@+id/buttongroup_footbar_activity_flatview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.8"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/mask_activity_flatview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@color/tranparentDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>